def read_and_write_file(input_filename, output_filename):
    try:
        # Read the input file
        with open(input_filename, 'r') as input_file:
            text = input_file.read()

        # Modify the text (convert to uppercase)
        modified_text = text.upper()

        # Write the modified text to the output file
        with open(output_filename, 'w') as output_file:
            output_file.write(modified_text)

        print(f"File modified successfully. Output written to {output_filename}")

    except FileNotFoundError:
        print(f"File {input_filename} not found.")




def read_file(filename):
    try:
        # Attempt to open and read the file
        with open(filename, 'r') as file:
            content = file.read()
            print(f"File '{filename}' content:")
            print(content)
    except FileNotFoundError:
        print(f"Error: File '{filename}' not found.")
    except PermissionError:
        print(f"Error: Permission denied to read file '{filename}'.")
    except Exception as e:
        print(f"An unexpected error occurred: {e}")

def main():
    filename = input("Please enter the filename: ")
    read_file(filename)

if __name__ == "__main__":
    main()